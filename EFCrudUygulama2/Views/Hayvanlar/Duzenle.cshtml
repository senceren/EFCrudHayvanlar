@model Hayvan

@{ 
    ViewBag.Title = "Hayvan Düzenle";
}

<h1>Düzenle</h1>

<form asp-action="Duzenle" method="post">
    <input type="hidden" asp-for="Id"  />
    <div class="mb-3">
        <label asp-for="Ad" class="form-label">Ad</label>
        <input asp-for="Ad" type="text" class="form-control" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>
    <button class="btn btn-primary" type="submit">Kaydet</button>  @*default submit*@
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>